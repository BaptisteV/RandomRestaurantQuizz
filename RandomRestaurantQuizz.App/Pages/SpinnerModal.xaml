<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomRestaurantQuizz.App.SpinnerModal"
             Padding="16"
             xmlns:res="clr-namespace:RandomRestaurantQuizz.App.Resources.Strings"
             Title="{x:Static res:AppText.SpinnerTitle}">
    <Grid x:Name="LoadingOverlay"
          HorizontalOptions="Fill"
          VerticalOptions="Fill">

        <BoxView HorizontalOptions="Fill"
                 BackgroundColor="Transparent"
                 VerticalOptions="Fill" />

        <Border WidthRequest="120"
                HeightRequest="120"
                BackgroundColor="{StaticResource Secondary}"
                HorizontalOptions="Center"
                VerticalOptions="Center">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow Offset="0,4"
                        Radius="10" />
            </Border.Shadow>

            <ActivityIndicator IsRunning="True"
                               Color="{StaticResource Primary}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               WidthRequest="40"
                               HeightRequest="40" />
        </Border>

    </Grid>
</ContentPage>