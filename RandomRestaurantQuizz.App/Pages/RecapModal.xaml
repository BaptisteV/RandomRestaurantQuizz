<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomRestaurantQuizz.App.RecapModal"
             xmlns:vm="clr-namespace:RandomRestaurantQuizz.App.ViewModels"
             x:DataType="vm:RecapViewModel"
             Title="Score recap">
    <ScrollView>
        <VerticalStackLayout Spacing="25"
                             HorizontalOptions="Fill"
                             MaximumWidthRequest="600">

            <Label x:Name="ScoreLabel"
                   HorizontalOptions="Center"
                   Text="{Binding ScoreText}"
                   FontSize="Large" />

            <CollectionView ItemsSource="{Binding Scores}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:VmScore">

                        <VerticalStackLayout>
                            <FlexLayout Direction="Row"
                                        JustifyContent="SpaceBetween">
                                <Label Text="{Binding Timestamp}"
                                       FontSize="18" />
                                <Label Text="{Binding Value}"
                                       FontSize="18"
                                       FontAttributes="Bold" />
                            </FlexLayout>
                            <BoxView HeightRequest="1"
                                     Color="DarkGray"
                                     Margin="0,0,0,8"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                    
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button x:Name="CloseBtn"
                    Text="Close"
                    Clicked="CloseBtn_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>