<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomRestaurantQuizz.App.GeoLocPickerPage"
             xmlns:vm="clr-namespace:RandomRestaurantQuizz.App.ViewModels"
             xmlns:res="clr-namespace:RandomRestaurantQuizz.App.Resources.Strings"
             x:DataType="vm:GeoLocPickerViewModel"
             Padding="16"
             Title="{x:Static res:AppText.GeoLocTitle}">

    <VerticalStackLayout VerticalOptions="Center"
                         MaximumWidthRequest="720">

        <CollectionView ItemsSource="{Binding Locations}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Button Text="{Binding .}"
                            Margin="0,4"
                            IsEnabled="true"
                            Clicked="Btn_Clicked" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>