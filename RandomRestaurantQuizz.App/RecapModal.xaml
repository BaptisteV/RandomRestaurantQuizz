<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomRestaurantQuizz.App.RecapModal"
             Title="RecapModal">

    <VerticalStackLayout Padding="30"
                         Spacing="25"
                         HorizontalOptions="Fill">

        <Label x:Name="ScoreLabel"
               HorizontalOptions="Center"
               Text="0.00"
               FontSize="Large" />

        <Grid x:Name="PbGrid" HorizontalOptions="Fill">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>

        <Button x:Name="CloseBtn"
                Text="Close"
                Clicked="CloseBtn_Clicked" />
    </VerticalStackLayout>
</ContentPage>